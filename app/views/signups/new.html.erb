<h1>Create your account</h1>

<%= form_with model: @user, url: signup_path do |form| %>
  <%= form.label :name %><br>
  <%= form.text_field :name, required: true, autofocus: true %><br>

  <%= form.label :email %><br>
  <%= form.email_field :email, required: true, autocomplete: "username" %><br>

  <%= form.label :password %><br>
  <%= form.password_field :password, required: true, autocomplete: "new-password", maxlength: 72 %><br>

  <%= form.label :password_confirmation %><br>
  <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", maxlength: 72 %><br>

  <%= form.submit "Sign up" %>
<% end %>
